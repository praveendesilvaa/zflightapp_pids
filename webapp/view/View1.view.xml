<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="zflightapppids.zflightapppids.controller.view1">
    <Page title="Home Page">
        <content>
            <HBox
                width="100%"
                height="100%"
                justifyContent="Center"
                alignItems="Center"
                renderType="Bare">
                <Button id="idCreateFlight" text="Create Flights" press="navToCreateFlight" class="myCustomButton"/>
                <Button id="idDisplayFlights" text="Display Flights" press="navToDisplayFlight" class="myDisplayButton"/>
                <Button id="idUpdateFlights" text="Update Flights" press="onPress" class="myCustomButton"/>
            </HBox>
        </content>
    </Page>
</mvc:View>